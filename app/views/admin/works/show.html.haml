.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, Work
				= link_to admin_work_path(@work), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.delete"), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
					= material_icon.md_18.delete.css_class("md-dark")
			- if can? :update, Work
				= link_to edit_admin_work_path(@work), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" =>t("keppler.actions.edit") do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to admin_works_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.card
			.card-content
				%center.color-title= @work.name.to_s.humanize
				%center= image_tag @work.image, style: "max-width:100%;height: 200px;"
				%table.bordered
					%tbody
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.id")
							%td
								.display-value.fs-body-1.tc-black-2= @work.id.to_s.humanize
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.name")
							%td
								.display-value.fs-body-1.tc-black-2= @work.name.blank? ? '----------' : @work.name
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.description")
							%td
								.display-value.fs-body-1.tc-black-2= @work.description.blank? ? '----------' : @work.description
						%tr 
							%th
								.display-label= t("State")
							%td
								.display-value.fs-body-1.tc-black-2= @work.stack_state_id.blank? ? '----------' : @work.stack_state.name
						%tr
							%th
								.display-label= t("City")
							%td
								.display-value.fs-body-1.tc-black-2= @work.stack_city_id.blank? ? '----------' : @work.stack_city.name
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.contractor")
							%td
								.display-value.fs-body-1.tc-black-2= @work.contractor.blank? ? '----------' : @work.contractor
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.time")
							%td
								.display-value.fs-body-1.tc-black-2= @work.time.blank? ? '----------' : @work.time
						

